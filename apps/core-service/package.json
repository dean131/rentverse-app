    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.6.2",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.3",
    "nodemon": "^3.0.1",
    "prisma": "^6.16.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
